{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": []
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"ignore": ["node_modules", ".next", ".trigger"],
		"formatWithErrors": true
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useImportType": "error"
			},
			"correctness": {
				"useExhaustiveDependencies": "off"
			}
		},
		"ignore": ["node_modules", ".next", ".trigger"]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
